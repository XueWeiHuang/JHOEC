@model JHOEC.Models.TreatmentFertilizer
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Edit A Fertilizer Treatment Detail";
}

<h2>Edit detail for fertilizer treatment @Context.Session.GetString("fertilizerName")</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="TreatmentFertilizerId" />
            <div class="form-group" hidden>
                <label asp-for="TreatmentId" class="control-label"></label>
                <select asp-for="TreatmentId" class="form-control" asp-items="ViewBag.TreatmentId"></select>
                <span asp-validation-for="TreatmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FertilizerName" class="control-label"></label>
                <select asp-for="FertilizerName" class="form-control" asp-items="ViewBag.FertilizerName" disabled></select>
                <span asp-validation-for="FertilizerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RatePerAcre" class="control-label"></label>
                <input asp-for="RatePerAcre" class="form-control" />
                <span asp-validation-for="RatePerAcre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RateMetric" class="control-label"></label>
                <input asp-for="RateMetric" class="form-control" readonly />
                <span asp-validation-for="RateMetric" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
