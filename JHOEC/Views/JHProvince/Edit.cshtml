@model JHOEC.Models.Province

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Province</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProvinceCode" class="control-label"></label>
                <input readonly asp-for="ProvinceCode" class="form-control" />
                <span asp-validation-for="ProvinceCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CountryCode" class="control-label"></label>
                <select asp-for="CountryCode" class="form-control" asp-items="ViewBag.country"></select>
                @*<span asp-validation-for="CountryCode" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="RetailTaxName" class="control-label"></label>
                <input asp-for="RetailTaxName" class="form-control" />
                <span asp-validation-for="RetailTaxName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RetailTaxRate" class="control-label"></label>
                <input asp-for="RetailTaxRate" class="form-control" />
                <span asp-validation-for="RetailTaxRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FederalTaxIncluded" class="control-label"></label>
                <input asp-for="FederalTaxIncluded" class="form-control" />
                <span asp-validation-for="FederalTaxIncluded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
