@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/agriculture-canola-countryside.jpg" alt="ASP.NET" class="img-responsive" style="width:100%; height:100%;object-fit: cover" />
            <div class="carousel-caption" role="option">
                <p>
                    We're more than just a fertilizer company! Find out how more about we can fit your business needs.
                    <a class="btn btn-default" href="~/JHFertilizer/Index">

                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">

            <img src="~/images/HYV.jpg" alt="Visual Studio" class="img-responsive" style="width: 100%; height:100%; object-fit: cover" />
            <div class="carousel-caption" role="option">
                <p>
                    Last year, Waterloo Fertilizers Inc. ranked #1 as the most trusted fertilizer provider for large scale agriculture.
                    <a class="btn btn-default" href="~/JHCrop/Index">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/farmland.jpg" alt="Microsoft Azure" class="img-responsive" style="width: 100%; height:100%; object-fit: cover" />
            <div class="carousel-caption" role="option">
                <p>
                    Learn more about our commitment to environmentally sustainable farming practices.
                    <a class="btn btn-default" href="~/JHPlot/Index">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Crops</h2>
        <p>View, create, update, and delete crops.</p>
        <a class="btn btn-success" asp-area="" asp-controller="JHCrop" asp-action="Index">
            Learn More >>
        </a>
    </div>
    <div class="col-md-6">
        <h2>Fertilizer</h2>
        <p>View, create, update, and delete fertilizer treatments.</p>
        <a class="btn btn-primary" asp-area="" asp-controller="JHFertilizer" asp-action="Index">
            Learn More >>
        </a>
    </div>

    <div class="col-md-6">
        <h2>Farm</h2>
        <p>View, create, update, and delete farm information</p>
        <a class="btn btn-danger" asp-area="" asp-controller="JHFarm" asp-action="Index">
            Learn More >>
        </a>
    </div>

    <div class="col-md-6">
        <h2>Plot</h2>
        <p>View, create, update, and delete fertilizer plot information.</p>
        <a class="btn btn-warning" asp-area="" asp-controller="JHPlot" asp-action="Index">
            Learn More >>
        </a>
    </div>
</div>